{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 900,
  "height": 420,
  "title": {"text": "Top 10 Migrant Source Countries by Year", "fontWeight": "bold"},
  "data": {
    "url": "https://raw.githubusercontent.com/loh-0/australian-migration/refs/heads/main/data/migration.csv"
  },
  "params": [
    {
      "name": "yrSel",
      "value": 2023,
      "bind": {"input": "range", "min": 2004, "max": 2023, "step": 1, "name": "Year: "}
    }
  ],
  "transform": [
    {"filter": "toNumber(datum.year) == yrSel"},
    {"calculate": "toNumber(datum.migrants)", "as": "migrants_num"},
    {
      "aggregate": [{"op": "sum", "field": "migrants_num", "as": "migrants"}],
      "groupby": ["country", "year", "iso3"]
    },
    {
      "window": [{"op": "rank", "as": "rank"}],
      "sort": [{"field": "migrants", "order": "descending"}],
      "groupby": ["year"]
    },
    {"filter": "datum.rank <= 10"}
  ],
  "mark": "bar",
  "encoding": {
    "y": {"field": "country", "type": "nominal", "sort": "-x", "title": null},
    "x": {
      "field": "migrants",
      "type": "quantitative",
      "axis": {
        "title": "Migrants",
        "labelExpr": "format(datum.value, ',')",
        "tickMinStep": 1000
      },
      "scale": {"zero": true, "nice": true}
    },
    "tooltip": [
      {"field": "country", "title": "Country"},
      {"field": "migrants", "type": "quantitative", "format": ",", "title": "Migrants"},
      {"field": "rank", "type": "quantitative", "title": "Rank"}
    ]
  },
  "config": {"view": {"stroke": null}}
}
