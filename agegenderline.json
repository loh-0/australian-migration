{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1100,
  "height": 450,
  "title": {
    "text": "Population by Age, Gender, and Year",
    "fontWeight": "bold",
    "fontSize": 16,
    "anchor": "start"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/loh-0/australian-migration/refs/heads/main/data/agemigration.csv",
    "format": {"type": "csv"}
  },
  "params": [
    {
      "name": "year_select",
      "value": 2018,
      "bind": {
        "input": "select",
        "options": [2018, 2022, 2023],
        "name": "Select Year: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.year == year_select"},
    {
      "fold": ["males", "females"],
      "as": ["gender", "population"]
    },
    {
      "calculate": "datum.gender == 'males' ? 'Male' : 'Female'",
      "as": "gender_label"
    }
  ],
  "mark": {"type": "line", "point": true, "strokeWidth": 3, "size": 80},
  "encoding": {
    "x": {
      "field": "Age",
      "type": "quantitative",
      "title": "Age",
      "axis": {
        "labelFontSize": 12,
        "titleFontSize": 14
      }
    },
    "y": {
      "field": "population",
      "type": "quantitative",
      "title": "Population",
      "axis": {
        "labelExpr": "format(datum.value, ',.0f')",
        "labelFontSize": 12,
        "titleFontSize": 14
      }
    },
    "color": {
      "field": "gender_label",
      "type": "nominal",
      "title": "Gender",
      "scale": {"range": ["#2c5aa0", "#d9534f"]},
      "legend": {
        "labelFontSize": 12,
        "titleFontSize": 13,
        "symbolSize": 150,
        "symbolStrokeWidth": 3
      }
    },
    "tooltip": [
      {"field": "Age", "type": "quantitative"},
      {"field": "gender_label", "type": "nominal", "title": "Gender"},
      {"field": "population", "type": "quantitative", "format": ",", "title": "Population"},
      {"field": "year", "type": "nominal", "title": "Year"}
    ]
  },
  "config": {
    "view": {"stroke": null},
    "background": "#f7fbff",
    "axis": {"grid": true, "gridOpacity": 0.15}
  }
}
